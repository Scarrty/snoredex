{
  "name": "snoredex",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter @snoredex/api --filter @snoredex/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r format",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:baseline": "pnpm --filter @snoredex/api prisma:migrate:baseline",
    "db:migrate": "pnpm --filter @snoredex/api prisma:migrate:deploy",
    "db:seed": "pnpm --filter @snoredex/api prisma:seed",
    "db:setup": "pnpm db:up && pnpm db:migrate && pnpm db:seed"
  }
}
